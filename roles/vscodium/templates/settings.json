{
  "[yaml]": { "editor.autoIndent": true },
  "bracketPairColorizer.forceIterationColorCycle": true,
  "bracketPairColorizer.forceUniqueOpeningColor": true,
  "bracketPairColorizer.scopeLineCSS": [
    "borderStyle : dashed",
    "borderWidth : 1px",
    "borderColor : {color}; opacity: 0.3"
  ],
  "bracketPairColorizer.showHorizontalScopeLine": false,
  "breadcrumbs.enabled": true,
  "cSpell.allowCompoundWords": true,
  "cSpell.enabledLanguageIds": [
    "css",
    "html",
    "ignore",
    "ini",
    "javascript",
    "javascriptreact",
    "json",
    "jsonc",
    "markdown",
    "plaintext",
    "properties",
    "python",
    "scss",
    "shellscript",
    "text",
    "xml",
    "yaml"
  ],
  "cSpell.userWords": ["repo"],
  "editor.fontFamily": "{{ user_font }}, monospace",
  "editor.fontLigatures": true,
  "editor.fontSize": 16,
  "editor.formatOnSave": true,
  "editor.lineHeight": 26,
  "editor.minimap.enabled": false,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.occurrencesHighlight": false,
  "editor.renderLineHighlight": "gutter",
  "editor.renderWhitespace": "all",
  "editor.suggest.localityBonus": true,
  "editor.tabCompletion": "on",
  "editor.tabSize": 2,
  "editor.wordWrap": "on",
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "extensions.autoUpdate": false,
  "extensions.ignoreRecommendations": true,
  "extensions.showRecommendationsOnlyOnDemand": true,
  "markdown.preview.fontFamily": "{{ user_font }}, monospace",
  "markdown.preview.fontSize": 16,
  "prettier.singleQuote": true,
  "python.formatting.provider": "yapf",
  "python.pythonPath": "{{ ansible_playbook_python }}",
  "search.location": "panel",
  "search.showLineNumbers": true,
  "telemetry.enableCrashReporter": false,
  "telemetry.enableTelemetry": false,
  "terminal.integrated.drawBoldTextInBrightColors": false,
  "terminal.integrated.fontFamily": "{{ user_font_monospace }}, monospace",
  "terminal.integrated.fontSize": 16,
  "update.channel": "none",
  "update.enableWindowsBackgroundUpdates": false,
  "update.showReleaseNotes": false,
  "window.menuBarVisibility": "toggle",
  "window.title": "${dirty}${activeEditorShort}${separator}${rootName}",
  "window.titleBarStyle": "custom",
  "workbench.activityBar.visible": false,
  "workbench.colorTheme": "Dracula Soft",
  "workbench.editor.showTabs": false,
  "workbench.enableExperiments": false,
  "workbench.settings.editor": "json",
  "workbench.sideBar.location": "right",
  "workbench.startupEditor": "none",
  "workbench.statusBar.feedback.visible": false,
  "workbench.tips.enabled": false,
  "xmlTools.enableXmlTreeView": false,
  "xmlTools.enforcePrettySelfClosingTagOnFormat": true,
  "xmlTools.removeCommentsOnMinify": true,
  "xmlTools.splitAttributesOnFormat": true
}
