config_version	1.2
snapshot_root	{{ storage_ext }}/bcp/
cmd_cp	/bin/cp
cmd_rm	/bin/rm
cmd_rsync	/usr/bin/rsync
cmd_logger	/usr/bin/logger
retain	weekly	3
verbose	2
loglevel	3
lockfile	/tmp/rsnapshot.pid
exclude	node_modules*
link_dest	1
backup	{{ user_storage }}/archive/	localhost/
backup	{{ user_storage }}/book/	localhost/
backup	{{ user_storage }}/dev/	localhost/
backup	{{ user_storage }}/gym/	localhost/
backup	{{ user_storage }}/music/	localhost/
backup	{{ user_storage }}/picture/	localhost/
backup	{{ user_storage }}/privacy/	localhost/
backup	{{ user_storage }}/sync/	localhost/
