Terminal={{ launcher_facts.terminal | default('false') }}
Type=Application
{% if launcher_facts.startup is defined %}
X-GNOME-Autostart-Delay={{ launcher_facts.delay | default(30) }}
X-GNOME-Autostart-enabled=true
{% endif %}
